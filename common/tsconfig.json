{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "declaration": true,
        "strict": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "outDir": "./dist/",
        "rootDir": "./src"
    },
    "include": ["./src"],
    "exclude": ["node_modules", "./tools"]
}